@model OnlineCarrerPortal.Models.InterviewModel
@{
    ViewBag.Title = "ScheduleInterview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h2>ScheduleInterview</h2>
    </div>
</div>
<form action="@Url.Action("ScheduleInterview", "Job")" method="post">
    @Html.HiddenFor(m => m.AppliedJobID)
    <input type="hidden" value="Scheduled" name="Status" />
    <div class="row">
        <div class="col-lg-2">
            Interview Date
        </div>
        <div class="col-lg-8">
            <input type="date" name="InterviewDate" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            Venue
        </div>
        <div class="col-lg-8">
            <input type="text" name="Venue" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            Description
        </div>
        <div class="col-lg-8">
            <input type="text" name="Description" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            
        </div>
        <div class="col-lg-8">
            <input type="submit" value="Schedule" />
        </div>
    </div>
</form>
